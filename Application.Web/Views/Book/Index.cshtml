@{
    ViewBag.Title = "Index";
}



<div>
    <a class="bt-novo-livro" href = "@Url.Action("Criar","Book")" > Adicionar novo livro </a> 
    <br/> <br/>
    <h2 class="titulo-lista"> Todos os livros cadastrados no sistema </h2>
    
        
        @foreach (var book in ViewBag.listBooks)
        {
            <div class="box-livro">
                <p class="p-titulo"><strong>Título:</strong> @book.Title</p>
                <p class="p-isbn"><strong>ISBN:</strong> @book.Isbn</p>

                <ul class="menu-acoes-livro">
                    <li class="item-acao-livro">
                        <a onclick="return confirm('Você deseja deletar este livro?')" href="@Url.Action("Delete","Book", new {id= book.BookId})">Deletar</a>
                    </li>
                    <li class="item-acao-livro">
                        <a href="@Url.Action("Editar","book",new {id = book.BookId})">Editar</a>
                    </li>
                </ul>
                
                
            </div>
        } 
   
</div>  
