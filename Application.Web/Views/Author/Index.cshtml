@{
    ViewBag.Title = "Index";
}



<div>
    <a class="bt-novo-livro" href="@Url.Action("Criar","Author")"> Adicionar novo autor </a>
    <br /> <br />
    <h2 class="titulo-lista"> Todos os autores cadastrados no sistema </h2>


    @foreach (var author in ViewBag.listAuthors)
    {
        <div class="box-livro">
            <p class="p-titulo"><strong>Nome:</strong> @author.FirstName</p>
            <p class="p-isbn"><strong>Sobrenome:</strong> @author.LastName</p>

            <ul class="menu-acoes-livro">
                <li class="item-acao-livro">
                    <a onclick="return confirm('Você deseja deletar este autor?')" href="@Url.Action("Delete","Author", new {id= author.AuthorId})">Deletar</a>
                </li>
                <li class="item-acao-livro">
                    <a href="@Url.Action("Editar","author",new {id = author.AuthorId})">Editar</a>
                </li>
            </ul>


        </div>
    }

</div>
